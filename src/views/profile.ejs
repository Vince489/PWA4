  <style>
    /* Header Styles */
    .profile-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem;
    }
  
    /* Profile Image Styles */
    .profile-pic-container {
      width: 100px;
      height: 100px;
      margin: 0 auto;
      border: 2px solid white;
      border-radius: 50%;
      overflow: hidden;
    }
  
    .profile-pic {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  
    /* Username Styles */
    .username {
      text-align: center;
      margin-top: 0.5rem;
      color: #9ca3af; /* Tailwind's gray-400 */
    }
  
    /* Stats Section Styles */
    .stats-container {
      display: flex;
      justify-content: center;
      margin-top: 1rem;
      gap: 2rem; /* Spacing between stats */
    }
  
    .stat {
      text-align: center;
    }
  
    .stat-value {
      font-weight: bold;
      font-size: 1.2rem;
    }
  
    .stat-label {
      color: #9ca3af; /* Tailwind's gray-400 */
      font-size: 0.875rem; /* Smaller font for labels */
    }
  
    /* Buttons Section Styles */
    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 2rem;
    }
  
    .message-button {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem 1rem;
      border-radius: 1.5rem;
      font-weight: bold;
      cursor: pointer;
      text-align: center;
      background-color: #f3f4f6;
      color: #000;
      border: 1px solid #e5e7eb;
      gap: 0.5rem; /* Space between icon and text */
    }
  
    .settings-button,
    .dropdown-button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: #f3f4f6;
      color: #000;
      border: 1px solid #e5e7eb;
      cursor: pointer;
    }
  
    .action-button:hover {
      background-color: #e5e7eb; /* Lighter gray on hover */
    }
  
    .action-button .material-icons {
      font-size: 1.5rem; /* Adjust icon size */
    }
  </style>
  
